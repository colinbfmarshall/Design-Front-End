<p id="notice"><%= notice %></p>

<div class="row">

  <div class="col-lg-offset-2 col-lg-8">
    <form class="form-inline search-bar" role="search">
    <div class="form-group">
      <input type="text" class="form-control" placeholder="What">
    </div>
    <div class="form-group">
      <input type="text" class="form-control" placeholder="Where">
    </div>
    <div class="form-group">
      <select class="form-control">
        <option>1 mile</option>
        <option>2 mile</option>
        <option>3 mile</option>
        <option>4 mile</option>
        <option>5 mile</option>
      </select>
    </div>
    <div class="form-group">
      <div class="checkbox">
        <label>
          <input type="checkbox" value="">
          Live jobs only
        </label>
      </div>
    </div>

    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
  </form>
  </div>
  <%= link_to 'Add Job', new_position_path, class: 'btn btn-default btn-sm pull-right' %>
</div>

<hr>

<div class="row">
  <% Position.order('updated_at DESC').limit(12).each do |position| %>
    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
      <%= render partial: 'position', locals: {position: position} %>
    </div>
  <% end %>
</div>

